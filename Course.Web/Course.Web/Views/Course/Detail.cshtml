@model CourseViewModel
@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1 class="mb-4 text-primary">@Model.Title</h1>
            <div class="mb-3">
                <span class="badge bg-secondary me-2">Category: @Model.CategoryName</span>
                <span class="badge bg-info">Educator: @Model.EducatorName</span>
            </div>
            <p class="text-muted"><strong>Total Hours:</strong> @Model.TotalHour</p>
            <p class="text-muted"><strong>Created At:</strong> @Model.CreatedAt</p>
            <p class="mt-4"><em>@Model.ShortDescription</em></p>
            <hr />
            <p class="mt-3">@Model.Description</p>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg">
                <img src="/pictures/courses/@Model.PictureUrl" alt="@Model.Title" class="card-img-top rounded-top">
                <div class="card-body text-center">
                    <h5 class="card-title text-success">@Model.Price</h5>
                    <a role="button" class="btn btn-primary w-100 d-flex align-items-center justify-content-center"
                       asp-controller="Basket" asp-action="AddBasketItem" asp-route-id="@Model.Id">
                        <i class="bi bi-cart3 me-2"></i> Add to cart
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card img {
        height: 200px;
        object-fit: cover;
    }

    h1.text-primary {
        font-size: 2.5rem;
        font-weight: bold;
    }

    .badge {
        font-size: 0.9rem;
    }

    .btn-primary {
        font-size: 1.1rem;
        font-weight: bold;
    }
</style>
