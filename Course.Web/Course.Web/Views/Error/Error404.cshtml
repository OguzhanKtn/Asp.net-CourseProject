@{
    ViewData["Title"] = "Page Not Found";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .error-container {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            background-color: #f8d7da;
            color: #721c24;
        }

        .error-message {
            font-size: 3rem;
            font-weight: bold;
        }

        .error-details {
            margin-top: 10px;
            font-size: 1.2rem;
        }

        .btn-back {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 1.1rem;
            background-color: #721c24;
            color: white;
            text-decoration: none;
        }

            .btn-back:hover {
                background-color: #f8d7da;
                color: #721c24;
            }
    </style>
</head>
<body>

    <div class="error-container">
        <div>
            <div class="error-message">
                <h1>@ViewData["ErrorCode"] - Page Not Found</h1>
            </div>
            <div class="error-details">
                <p>Sorry, the page you're looking for might have been moved or deleted.</p>
                <p>We can't find the page you're looking for. Please check the URL or go back to the homepage.</p>
            </div>
            <a href="/" class="btn-back">Go to Homepage</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

