
@{
    ViewData["Title"] = "PaymentSuccess";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 70vh;">
    <div class="card text-center shadow-lg" style="max-width: 500px;">
        <div class="card-body">
            <div class="mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
            </div>
            <h3 class="card-title text-success">Ödeme Başarılı!</h3>
            <p class="card-text mt-3">
                Ödemeniz başarıyla tamamlandı. Siparişinizi en kısa sürede işleme alacağız.
            </p>
            <a href="/" class="btn btn-primary mt-4">Ana Sayfaya Dön</a>
        </div>
        <div class="card-footer text-muted">
            Sipariş numaranız: <strong>@Guid.NewGuid()</strong>
        </div>
    </div>
</div>


